<div class="w-75 mx-auto mt-5">
  <div class="row">
    <div class="col-6">
      <h1>Review List</h1>
    </div>
    <!-- <div class="col-6 d-flex justify-content-end">
      <a href="/admin/add-review" type="button" class="align-self-center"
        >Add a new Review</a
      >
    </div> -->
  </div>

  <%if(reviews.length> 0){%>
  <div class="mt-3 mb-3">
    <table class="table">
      <thead class="bg-dark text-light">
        <tr>
          <th scope="col">Index</th>
          <th scope="col">Employee</th>
          <th scope="col">Reviewer</th>
          <th scope="col">Review</th>
          <th scope="col">Reviewed At</th>
          <th scope="col">Make Changes</th>
        </tr>
      </thead>
      <%i=1%> <% for(let review of reviews){%>
      <tbody>
        <tr>
          <th scope="row"><%=i++%></th>
          <td><%=review.to.name%></td>
          <td><%=review.from.name%></td>
          <td><%=review.review%></td>
          <td><%= moment(review.createdAt).fromNow()%></td>
          <td>
            <a
              href="/admin/update-review/<%=review.id%>"
              type="button"
              class="btn btn-primary"
              >Edit</a
            >
            <!-- <a
              href="/admin/delete-review/<%=review.id%>"
              type="button"
              class="btn btn-danger"
              >Delete</a > -->
          </td>
        </tr>
      </tbody>
      <%}%>
    </table>
  </div>
  <%}else{%>
  <div class="w-75 mx-auto mt-5">
    <h2>There are no reviews to display...</h2>
  </div>
  <%}%>
</div>

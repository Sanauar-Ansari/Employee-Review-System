<form class="w-50 mx-auto mt-4 p-5" action="/admin/add-review" method="post">
    <h4>Add Review for Employee</h4>
    <select class="form-select" name="employee" required>
        <option value="" disabled selected>Select Employee to Review</option>
        <!-- go through every user from req.user -->
        <% for(user of users){ %>
            <option value="<%= user.id %>">
                <%= user.name %>
            </option>
            <% } %>
    </select>

    <div class="form-group mt-3">
        <textarea class="form-control" required rows="3" name="review" placeholder="Give your review"></textarea>
    </div>
    <div class="form-group mt-3 text-center">
        <button type="reset" class="btn btn-danger">Reset</button>
        <button type="submit" class="btn btn-success">Submit Feedback</button>
    </div>

</form>